# --- Application Environment ---
# 動作環境の切り替え: development (開発機) or production (本番機)
# development: runserver + hot reload
# production: gunicorn + static file serving
APP_ENV=development

# --- Django Core Settings ---
# DEBUGモード（本番稼働時は必ず FALSE に設定してください）
DEBUG=True

# Djangoのシークレットキー（本番環境では必ず独自の値に変更してください）
# 生成方法例: python3 -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# アクセスを許可するホスト（カンマ区切り）
# 本番環境ではドメイン名やサーバーのIPアドレスを追記してください
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Session Settings ---
# セッションバックエンドの設定
# signed_cookies: クッキーベース（低リソース環境に最適、デフォルト）
# django.contrib.sessions.backends.cache: キャッシュベース
SESSION_ENGINE=django.contrib.sessions.backends.signed_cookies

# --- Database Settings (Postgres) ---
POSTGRES_ENGINE=django.db.backends.postgresql
POSTGRES_DB=pokeapp_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- External APIs ---
# Google Gemini API Keys (複数キーのローテーションに対応)
GEMINI_API_KEY_1=your_api_key_here
# GEMINI_API_KEY_2=
# GEMINI_API_KEY_3=
# ...